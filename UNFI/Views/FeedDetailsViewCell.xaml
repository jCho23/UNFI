<?xml version="1.0" encoding="UTF-8"?>
<ViewCell
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="UNFI.Views.FeedDetailsViewCell">

<ViewCell.View>
        <Frame
            OutlineColor="#0c2461"
            Margin="7,3,7,3">
            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Start">
                    <ic:CircleImage
                        x:Name = "UserProfilePicture"
                        BorderColor="Gray"
                        BorderThickness="3"
                        Aspect="AspectFill"
                        HeightRequest="75" WidthRequest="75"/>
                    <Label
                        x:Name = "ReplyMessageLabel"
                        FontSize="16" 
                        Margin="5,2,0,0"
                        HorizontalOptions="Center" VerticalOptions="Center"/>
            </StackLayout> 
        </Frame>    
    </ViewCell.View>
    
</ViewCell>